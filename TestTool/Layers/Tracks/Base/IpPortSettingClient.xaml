<Window x:Class="VTSCore.Layers.Tracks.IpPortSettingClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Closed="Window_Closed"
        Height="160" Width="240" WindowStyle="SingleBorderWindow" ResizeMode="NoResize"
        >
    <Grid>
            <Label Content="IP:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,10,0,0"/>
            <TextBox Name="tbIp" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,10,0,0" Width="150"/>
            <Label Content="端口：" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,40,0,0"/>
            <TextBox Name="tbPort" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,40,0,0" Width="150"/>
            <Button Name="btSave" Content="保存" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,80,0,0" Width="80" Height="30" Click="btSave_Click" IsDefault="True"/>
            <Button Name="btQuit" Content="取消" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="115,80,0,0" Width="80" Height="30" Click="btQuit_Click"/>
    </Grid>
</Window>
